@page "/pacientes"
@inherits IndexPage

<MudText Typo="Typo.h3">Pacientes</MudText>

<MudButton Variant="Variant.Filled"
StartIcon="@Icons.Material.Filled.Add"
Color="Color.Info"
Size="Size.Large"
Href="/pacientes/create"
Class="mt-md-4 mb-4"
>Novo Paciente</MudButton>


<MudDataGrid items="@Pacientes" Filterable="true" Bordered="true" SortMode="@SortMode.Single" 
Groupable="false">
    <Columns>
        <PropertyColumn Property="p => p.Nome"  />
        <PropertyColumn Property="p => p.Documento"  />
        <PropertyColumn Property="p => p.Email"  />
        <PropertyColumn Property="p => p.Celular"  />
        <PropertyColumn Property="p => p.DataNascimento" Format="dd/MM/yyyy" />
            <TemplateColumn>
                <CellTemplate>
                    <MudStack Row>
                    <MudFab Size="Size.Small" Label="Editar"
                            OnClick="() => GoToUpdate(context.Item.Id)"
                            StartIcon="@Icons.Material.Filled.Edit"
                            Color="Color.Success" />

                        <MudFab Size="Size.Small" Label="Excluir" 
                        OnClick="() => DeletePaciente(context.Item)" 
                        StartIcon="@Icons.Material.Filled.Delete" 
                        Color="Color.Error"></MudFab>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>

    </Columns>
</MudDataGrid>
            
